<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <io.rong.imkit.widget.AsyncImageView
        android:id="@+id/item_friend_portrait"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:padding="5dp"
        android:src="@drawable/rc_default_portrait" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/item_friend_portrait"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_friend_username"
            style="@style/DemoTextStyleBigBlack"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:ellipsize="end"
            android:text="新朋友"
            android:singleLine="true" />
        <TextView
            style="@style/DemoTextStyleBigBlack"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="12dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="请求添加你为好友"/>

    </LinearLayout>

    <TextView
        android:id="@+id/item_friend_state_refuse"
        style="@style/DemoTextStyleBigBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/item_friend_state"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:background="@drawable/circle_button_user_info"
        android:gravity="center"
        android:text="拒绝"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/item_friend_state"
        style="@style/DemoTextStyleBigBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:background="@drawable/circle_button_user_info"
        android:gravity="center"
        android:text="添加"
        android:textColor="#ffffff" />


</RelativeLayout>