<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainViewRbtnStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@drawable/rbtn_main_text_color</item>
    </style>

    <style name="divide_line">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#D3D3D3</item>

    </style>

    <style name="divide_line_02">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#9B9B9B</item>
    </style>

    <style name="title_tv_style">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title_tv_size</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/colorTitleTv</item>
    </style>

    <style name="edit_style">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/content_tv_size</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColorHint">#D3D3D3</item>
        <item name="android:background">@null</item>
    </style>

    <style name="title_iv_back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@mipmap/dingbu_fanhui2</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
    </style>

    <style name="title_iv_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@mipmap/login</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    <style name="pw_anim_style">
        <item name="android:windowEnterAnimation">@anim/show_pw</item>
        <item name="android:windowExitAnimation">@anim/hide_pw</item>
    </style>

    <style name="btn_login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_login_select</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/title_tv_size</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>


    <style name="progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <!-- 设置未浮动窗口 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置无边框 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置无标题 -->
        <item name="android:windowBackground">@color/no_back</item>
        <!-- 设置完全透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 设置屏幕变暗 -->
    </style>

    <style name="publicloadingProgressStyle">
        <item name="android:maxWidth">200dip</item>
        <item name="android:maxHeight">200dip</item>
        <item name="android:indeterminateDrawable">@drawable/wb_loading_frame</item>
        <item name="android:minWidth">200dip</item>
        <item name="android:minHeight">200dip</item>
    </style>

    <style name="home_sliding_tv">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/content_tv_size</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>


    <style name="home_tv_address">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/content_tv_size</item>
        <item name="android:drawableLeft">@mipmap/input_icon</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">#FF8904</item>
        <item name="android:padding">15dp</item>
    </style>


    <style name="home_rbtn_style">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/rbtn_home_text</item>
        <item name="android:background">@drawable/rbtn_home_select</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/content_tv_size</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
    </style>

    <!--融云定义样式Style-->
    <style name="WinDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <!-- -->
    <style name="ActionBarSettingImg">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ActionBarSettingTextView">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/group_list_black_textview</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- 下划线-->
    <style name="PublicLineView">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@color/group_list_gray</item>
    </style>

    <!--主页面ui下划线-->
    <style name="DemoMainPublic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/de_title_bg</item>
    </style>

    <style name="DemoMainNewMassage1">
        <item name="android:background">@drawable/rc_unread_count_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/tab_indicator_text</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_width">6dp</item>
        <item name="android:layout_height">6dp</item>
        <!-- <item name="android:visibility">gone</item>-->
    </style>

    <style name="DemoMainNewMassage">
        <item name="android:background">@drawable/rc_unread_count_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/tab_indicator_text</item>
        <item name="android:textSize">9sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <!-- <item name="android:visibility">gone</item>-->
    </style>

    <style name="DemoAddressNewMassage">
        <item name="android:background">@drawable/rc_unread_count_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/tab_indicator_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <!-- <item name="android:visibility">gone</item>-->
    </style>

    <!-- big black-->
    <style name="DemoTextStyleBig1">
        <item name="android:textSize">18sp</item>
    </style>
    <!-- big black-->
    <style name="DemoTextStyleBigBlack">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/group_list_black_textview</item>
    </style>
    <!-- small gray-->
    <style name="DemoTextStyleSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/group_list_gray</item>
    </style>

    <!-- middle gray-->
    <style name="DemoTextStyleMiddle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/group_list_gray</item>
    </style>


    <style name="anim_popup_dir">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">

        <item name="android:button">@drawable/de_pic_checkbox</item>

        <item name="android:paddingLeft">2.0dip</item>

        <item name="android:maxHeight">10.0dip</item>

    </style>

    <style name="PicCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">

        <item name="android:button">@drawable/de_pic_chebox_photo</item>

        <item name="android:paddingLeft">2.0dip</item>

        <item name="android:maxHeight">10.0dip</item>

    </style>

    <style name="TextTitleWiser">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#9A9A9A</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextContentWiser">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#434343</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--路况信息时间样式-wiser-->
    <style name="chat_text_date_style">
        <item name="android:padding">2dp</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:textColor">@color/btn_gray_normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/timestampe_bg</item>
    </style>

    <style name="chat_text_name_style">
        <item name="android:textColor">#818181</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
