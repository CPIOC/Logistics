<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainViewRbtnStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@drawable/rbtn_main_text_color</item>
    </style>

    <style name="divide_line">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#D3D3D3</item>

    </style>

    <style name="divide_line_02">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#9B9B9B</item>
    </style>
  <style name="title_tv_style">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title_tv_size</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/colorTitleTv</item>
    </style>

    <style name="edit_style">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/content_tv_size</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColorHint">#D3D3D3</item>
        <item name="android:background">@null</item>
    </style>

    <style name="title_iv_back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@mipmap/dingbu_fanhui2</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
    </style>

 <style name="btn_login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_login_select</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/title_tv_size</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>


    <style name="progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <!-- 设置未浮动窗口 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置无边框 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置无标题 -->
        <item name="android:windowBackground">@color/no_back</item>
        <!-- 设置完全透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 设置屏幕变暗 -->
    </style>

    <style name="publicloadingProgressStyle">
        <item name="android:maxWidth">200dip</item>
        <item name="android:maxHeight">200dip</item>
        <item name="android:indeterminateDrawable">@drawable/wb_loading_frame</item>
        <item name="android:minWidth">200dip</item>
        <item name="android:minHeight">200dip</item>
    </style>

    <style name="home_sliding_tv">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/content_tv_size</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>


    <style name="home_tv_address">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/content_tv_size</item>
        <item name="android:drawableLeft">@mipmap/arrow_right_blue</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">#FF8904</item>
        <item name="android:padding">15dp</item>
    </style>


    <style name="home_rbtn_style">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/rbtn_home_text</item>
        <item name="android:background">@drawable/rbtn_home_select</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
    </style>

</resources>
